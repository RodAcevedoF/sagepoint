generator client {
  provider = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  extensions = [vector]
}

enum UserRole {
  ADMIN
  USER
}

enum OnboardingStatus {
  PENDING
  COMPLETED
  SKIPPED
}

enum ResourceType {
  ARTICLE
  VIDEO
  COURSE
  DOCUMENTATION
  TUTORIAL
  BOOK
}

enum RoadmapGenerationStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum StepStatus {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
  SKIPPED
}

enum ProcessingStage {
  UPLOADED
  PARSING
  ANALYZING
  SUMMARIZED
  READY
}

enum QuestionType {
  MULTIPLE_CHOICE
  TRUE_FALSE
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String?
  googleId  String?  @unique
  role      UserRole @default(USER)
  avatarUrl String?
  isActive  Boolean  @default(true)
  isVerified Boolean @default(false)
  verificationToken String?
  
  learningGoal     String?  // "Become a DevOps Engineer"
  onboardingStatus OnboardingStatus @default(PENDING)
  interests        UserInterest[]
  preferences      UserPreferences?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  documents Document[]
  roadmaps  Roadmap[]

  @@index([verificationToken])
  @@index([onboardingStatus])
  @@map("users")
}

model UserInterest {
  userId     String
  categoryId String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())

  @@id([userId, categoryId])
  @@index([userId])
  @@index([categoryId])
  @@map("user_interests")
}

model UserPreferences {
  id     String @id @default(uuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Learning preferences
  weeklyHoursGoal  Int?     // Hours per week user wants to study
  experienceLevel  String?  // beginner, intermediate, advanced
  preferredFormat  String?  // video, text, interactive

  // Notification preferences
  emailNotifications Boolean @default(true)
  pushNotifications  Boolean @default(true)

  // UI preferences
  theme String @default("system") // light, dark, system

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user_preferences")
}

model Document {
  id              String           @id @default(uuid())
  filename        String
  status          String
  storagePath     String
  errorMessage    String?
  processingStage ProcessingStage  @default(UPLOADED)
  mimeType        String?
  fileSize        Int?
  conceptCount    Int?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  userId          String
  user            User             @relation(fields: [userId], references: [id])

  roadmaps        Roadmap[]
  summary         DocumentSummary?
  quizzes         Quiz[]

  @@index([userId])
  @@index([processingStage])
  @@map("documents")
}

model DocumentSummary {
  id                String   @id @default(uuid())
  documentId        String   @unique
  document          Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  overview          String   @db.Text
  keyPoints         Json
  topicArea         String
  difficulty        String
  estimatedReadTime Int?
  conceptCount      Int      @default(0)
  createdAt         DateTime @default(now())

  @@map("document_summaries")
}

model Quiz {
  id            String        @id @default(uuid())
  documentId    String
  document      Document      @relation(fields: [documentId], references: [id], onDelete: Cascade)
  title         String
  description   String?
  questionCount Int           @default(0)
  questions     Question[]
  attempts      QuizAttempt[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([documentId])
  @@map("quizzes")
}

model Question {
  id         String       @id @default(uuid())
  quizId     String
  quiz       Quiz         @relation(fields: [quizId], references: [id], onDelete: Cascade)
  type       QuestionType
  text       String       @db.Text
  options    Json
  explanation String?
  conceptId  String?
  order      Int          @default(0)
  difficulty String
  createdAt  DateTime     @default(now())

  @@index([quizId])
  @@map("questions")
}

model QuizAttempt {
  id             String    @id @default(uuid())
  quizId         String
  quiz           Quiz      @relation(fields: [quizId], references: [id], onDelete: Cascade)
  userId         String
  answers        Json
  score          Float
  totalQuestions  Int
  correctAnswers Int
  completedAt    DateTime?
  createdAt      DateTime  @default(now())

  @@index([userId, quizId])
  @@index([userId])
  @@map("quiz_attempts")
}

model Category {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  description String?
  parentId    String?
  parent      Category? @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children    Category[] @relation("CategoryHierarchy")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  roadmaps    Roadmap[]
  users       UserInterest[]

  @@map("categories")
}

model Roadmap {
  id          String   @id @default(uuid())
  title       String
  description String?

  userId      String
  user        User     @relation(fields: [userId], references: [id])

  documentId  String?
  document    Document? @relation(fields: [documentId], references: [id])

  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id])

  steps              Json     // Storing steps as JSON for simplicity, or could be separate model
  generationStatus   RoadmapGenerationStatus @default(PENDING)
  totalDuration      Int?     // Total estimated duration in minutes
  recommendedPace    String?  // e.g., "2-3 concepts per week"
  errorMessage       String?

  resources         Resource[]
  progress          UserRoadmapProgress[]
  stepQuizAttempts  StepQuizAttempt[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([documentId])
  @@index([categoryId])
  @@index([generationStatus])
  @@map("roadmaps")
}

model Resource {
  id                String       @id @default(uuid())
  title             String
  url               String
  type              ResourceType
  description       String?
  provider          String?
  estimatedDuration Int?         // in minutes
  difficulty        String?      // beginner, intermediate, advanced
  conceptId         String       // ID of the concept this resource is for
  order             Int          @default(0)

  roadmapId         String
  roadmap           Roadmap      @relation(fields: [roadmapId], references: [id], onDelete: Cascade)

  createdAt         DateTime     @default(now())

  @@index([conceptId])
  @@index([roadmapId])
  @@map("resources")
}

model UserRoadmapProgress {
  userId      String
  roadmapId   String
  conceptId   String
  status      StepStatus @default(NOT_STARTED)
  completedAt DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  roadmap     Roadmap    @relation(fields: [roadmapId], references: [id], onDelete: Cascade)

  @@id([userId, roadmapId, conceptId])
  @@index([userId])
  @@index([roadmapId])
  @@index([userId, roadmapId])  // Composite for efficient user+roadmap queries
  @@map("user_roadmap_progress")
}

model StepQuizAttempt {
  id             String    @id @default(uuid())
  userId         String
  roadmapId      String
  conceptId      String
  questions      Json      // StepQuizQuestion[] with isCorrect flags
  answers        Json?     // User answers, null until submitted
  score          Float     @default(0)
  totalQuestions  Int       @default(3)
  correctAnswers Int       @default(0)
  passed         Boolean   @default(false)
  completedAt    DateTime?
  createdAt      DateTime  @default(now())

  roadmap        Roadmap   @relation(fields: [roadmapId], references: [id], onDelete: Cascade)

  @@index([userId, roadmapId, conceptId])
  @@index([userId])
  @@map("step_quiz_attempts")
}
