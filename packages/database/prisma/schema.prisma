generator client {
  provider = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  extensions = [vector]
}

enum UserRole {
  ADMIN
  USER
}

enum OnboardingStatus {
  PENDING
  COMPLETED
  SKIPPED
}

enum ResourceType {
  ARTICLE
  VIDEO
  COURSE
  DOCUMENTATION
  TUTORIAL
  BOOK
}

enum RoadmapGenerationStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum StepStatus {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
  SKIPPED
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String?
  googleId  String?  @unique
  role      UserRole @default(USER)
  avatarUrl String?
  isActive  Boolean  @default(true)
  isVerified Boolean @default(false)
  verificationToken String?
  
  learningGoal     String?  // "Become a DevOps Engineer"
  onboardingStatus OnboardingStatus @default(PENDING)
  interests        UserInterest[]
  preferences      UserPreferences?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  documents Document[]
  roadmaps  Roadmap[]

  @@index([verificationToken])
  @@index([onboardingStatus])
  @@map("users")
}

model UserInterest {
  userId     String
  categoryId String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())

  @@id([userId, categoryId])
  @@index([userId])
  @@index([categoryId])
  @@map("user_interests")
}

model UserPreferences {
  id     String @id @default(uuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Learning preferences
  weeklyHoursGoal  Int?     // Hours per week user wants to study
  experienceLevel  String?  // beginner, intermediate, advanced
  preferredFormat  String?  // video, text, interactive

  // Notification preferences
  emailNotifications Boolean @default(true)
  pushNotifications  Boolean @default(true)

  // UI preferences
  theme String @default("system") // light, dark, system

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user_preferences")
}

model Document {
  id          String   @id @default(uuid())
  filename    String
  status      String
  storagePath String
  errorMessage String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  userId      String
  user        User     @relation(fields: [userId], references: [id])

  roadmaps    Roadmap[]

  @@index([userId])
  @@map("documents")
}

model Category {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  description String?
  parentId    String?
  parent      Category? @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children    Category[] @relation("CategoryHierarchy")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  roadmaps    Roadmap[]
  users       UserInterest[]

  @@map("categories")
}

model Roadmap {
  id          String   @id @default(uuid())
  title       String
  description String?

  userId      String
  user        User     @relation(fields: [userId], references: [id])

  documentId  String
  document    Document @relation(fields: [documentId], references: [id])

  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id])

  steps              Json     // Storing steps as JSON for simplicity, or could be separate model
  generationStatus   RoadmapGenerationStatus @default(PENDING)
  totalDuration      Int?     // Total estimated duration in minutes
  recommendedPace    String?  // e.g., "2-3 concepts per week"

  resources   Resource[]
  progress    UserRoadmapProgress[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([documentId])
  @@index([categoryId])
  @@index([generationStatus])
  @@map("roadmaps")
}

model Resource {
  id                String       @id @default(uuid())
  title             String
  url               String
  type              ResourceType
  description       String?
  provider          String?
  estimatedDuration Int?         // in minutes
  difficulty        String?      // beginner, intermediate, advanced
  conceptId         String       // ID of the concept this resource is for
  order             Int          @default(0)

  roadmapId         String
  roadmap           Roadmap      @relation(fields: [roadmapId], references: [id], onDelete: Cascade)

  createdAt         DateTime     @default(now())

  @@index([conceptId])
  @@index([roadmapId])
  @@map("resources")
}

model UserRoadmapProgress {
  userId      String
  roadmapId   String
  conceptId   String
  status      StepStatus @default(NOT_STARTED)
  completedAt DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  roadmap     Roadmap    @relation(fields: [roadmapId], references: [id], onDelete: Cascade)

  @@id([userId, roadmapId, conceptId])
  @@index([userId])
  @@index([roadmapId])
  @@index([userId, roadmapId])  // Composite for efficient user+roadmap queries
  @@map("user_roadmap_progress")
}
